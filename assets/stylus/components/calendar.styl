.clndr
	
	&-day,
	&-weekday
		width 14.2857%
		padding 10px 0
		text-align center
		color #444
		
	&-event
		position relative
		cursor pointer
		
		&::after
			content ''
			display block
			position absolute
			top 32px
			left 30%
			width 15px
			border 1px solid saturate(lighten($purple, 20%), 90%)
			
	
	&-adjacent
		opacity 0.35
	
	&-month
		font-weight 300
		font-size 18px
		letter-spacing 3px
	
	&-weekday
		font-weight 400
		font-size 16px
	
	&-day
		font-weight 300
		font-size 16px
		
	&-today
		box-shadow inset 0 0 8px #d4d4d4
	
	&-controls
		margin 20px 0 5px 0
		color #444
		display flex
		justify-content space-between
		user-select none
	
	&-previous-button,
	&-next-button
		height 25px
		width 25px
		text-align center
		cursor pointer
	
	&-weekdays
		display flex
	
	&-days
		display flex
		flex-wrap wrap	