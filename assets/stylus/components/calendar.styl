.clndr
	background-color white
	position relative
	
	&-content
		position relative
		min-height 280px
	
	&-day,
	&-weekday
		width 14.2857%
		padding 10px 0
		text-align center
		color #444
		
	&-event
		position relative
		cursor pointer
		user-select none
		
		&::after
			content ''
			display block
			position absolute
			top 32px
			left 30%
			width 15px
			border 1px solid lighten($purple, 10%)
			
	
	&-adjacent
		opacity 0.35
	
	&-month
		font-weight 300
		font-size 18px
		letter-spacing 3px
	
	&-weekday
		font-weight 400
		font-size 16px
	
	&-day
		font-weight 300
		font-size 16px
		
	&-today
		box-shadow inset 0 0 8px #d4d4d4
	
	&-controls
		margin-bottom 5px
		color #444
		display flex
		justify-content space-between
		user-select none
	
	&-previous-button,
	&-next-button
		height 25px
		width 25px
		text-align center
		cursor pointer
	
	&-weekdays
		display flex
	
	&-days
		display flex
		flex-wrap wrap
	
.events
	margin-top 25px
	position absolute
	top 0
	right 0
	left 0
	
	&-list	
		height 255px

.event
	padding-right 11px
	margin-bottom 25px
	letter-spacing 1px

	&-close
		position absolute
		top -30px
		right 0
		font-size 20px
		cursor pointer
		color #555
		font-weight bold

	&-header
		font-size 18px
		color $blue
		text-align center
		
	&:hover &-header
		text-decoration underline
	
	&-excerpt
		margin-top 2px
		font-weight 300